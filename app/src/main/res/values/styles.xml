<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/mark_pro_bold</item>
    </style>

    <style name="RegularText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:fontFamily">@font/mark_pro</item>
    </style>

    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/orange</item>
    </style>
</resources>